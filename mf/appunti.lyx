\begin_inset Formula 
\begin{eqnarray}
Vw_{p} & = & \lambda(e-r_{f}S)\label{cpo1rf}\\
r_{f}+w_{p}^{\prime}(e-r_{f}S) & = & E[r_{p}]\label{cpo2rf}\\
\text{da cui \ \ \ \ \ \ \ \ \ \ \ }w_{p} & = & \lambda V^{-1}(e-r_{f}S)\label{cpo3rf}
\end{eqnarray}

\end_inset

