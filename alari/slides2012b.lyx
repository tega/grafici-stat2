\begin_layout FrameSubtitle
Erlang Distribution
\end_layout

\begin_layout Standard
When 
\begin_inset Formula $r$
\end_inset

 sequential phases have identical exponential distribution the resulting
 density is known as 
\begin_inset Formula $r-$
\end_inset

stage Erlang and is given by
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{eqnarray*}
f(t) & = & \frac{\lambda^{r}t^{r-1}\exp(-\lambda t)}{(r-1)!}\textnormal{ with }t>0,\ \lambda>0,\ r=1,2,\dots\\
F(t) & = & 1-\sum_{k=0}^{r-1}\frac{(\lambda t)^{k}}{k!}\exp(-\lambda t)\textnormal{ with }t\geq0,\ \lambda>0,\ r=1,2,\dots
\end{eqnarray*}

\end_inset


\end_layout

