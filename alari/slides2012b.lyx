\begin_layout FrameSubtitle
The memoryless property of the exponential distribution
\end_layout

\begin_layout Standard
Let 
\begin_inset Formula $X\sim Exp(\lambda)$
\end_inset

 be the lifetime of a component.
 Suppose we have observed that it has already been operating for 
\begin_inset Formula $t$
\end_inset

 hours.
 
\end_layout

\begin_layout Itemize
What is the distribution of the remaining (residual) lifetime 
\begin_inset Formula $Y=X-t$
\end_inset

? 
\end_layout

\begin_layout Standard
Let the conditional probability of 
\begin_inset Formula $Y\leq y$
\end_inset

, given that 
\begin_inset Formula $X>t$
\end_inset

, be denoted by 
\begin_inset Formula $G_{Y}(y\mid t)$
\end_inset

.
 For 
\begin_inset Formula $y\geq0$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{eqnarray*}
G_{Y}(y\mid t) & = & P(Y\leq y\mid X>t)=\frac{P(\{Y\leq y\}\textnormal{ and }\{X>t\})}{P(X>t)}\\
 & = & \frac{P(\{X\leq y+t\}\textnormal{ and }\{X>t\})}{P(X>t)}=\frac{P(t<X\leq y+t)}{P(X>t)}\\
 & = & \frac{exp(-\lambda t)(1-exp(-\lambda y))}{exp(-\lambda t)}=1-exp(-\lambda y).
\end{eqnarray*}

\end_inset


\end_layout

\begin_layout EndFrame

\end_layout

\begin_layout BeginFrame
